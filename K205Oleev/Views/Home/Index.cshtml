@model HomeVM


@{
    ViewData["Title"] = "Home Page";
}

 <!-- Start Main Banner Area -->
        <div class="main-banner-area">
            <div class="container-fluid">
                <div class="row align-items-center justify-content-center">
                    <div class="col-lg-5 col-md-12" data-aos="fade-right" data-aos-delay="50" data-aos-duration="500" data-aos-once="true">
                        <div class="main-banner-content" data-speed="0.05" data-revert="true">
                            <span>Creative Digital Agency</span>
                            <h1>Create Your Experience With Us</h1>
                            <p>Lorem ipsum dolor sit amet consectetur adipiscing elit et fames maecenas amet est scelerisque lectus tortor sit.</p>
                            <div class="banner-btn">
                                <a href="contact.html" class="default-btn">Get A Quote</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-7 col-md-12" data-aos="fade-left" data-aos-delay="50" data-aos-duration="500" data-aos-once="true">
                        <div class="main-banner-image-slides owl-carousel owl-theme">
                            <div class="slides-image-item">
                                <img src="assets/images/main-banner/banner-1.jpg" alt="Oleev">
                            </div>
                            <div class="slides-image-item">
                                <img src="assets/images/main-banner/banner-2.jpg" alt="Oleev">
                            </div>
                            <div class="slides-image-item">
                                <img src="assets/images/main-banner/banner-3.jpg" alt="Oleev">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="main-banner-shape-1" data-speed="0.08" data-revert="true">
                <img src="assets/images/main-banner/shape-1.png" alt="Oleev">
            </div>
            <div class="main-banner-shape-2" data-speed="0.08" data-revert="true">
                <img src="assets/images/main-banner/shape-2.png" alt="Oleev">
            </div>
            <div class="main-banner-bg-text" data-speed="0.09" data-revert="true">Oleev</div>
        </div>
        <!-- End Main Banner Area -->

         <!-- Start Features Area -->
        <div class="features-area pt-100 pb-75">
            <div class="container">
                <div class="row justify-content-center">


                    @foreach (var item in Model.ProductLanguages)
                    {
                         <div class="col-lg-4 col-md-6">
                        <div class="single-features-card">
                            <div class="number">01</div>
                            <h3>
                                <a href="services-details.html">@item.Title</a>
                            </h3>
                            <ul class="features-list">
                                <li><a href="services-details.html">@Html.Raw(item.Description)</a></li>
                                <li><a href="services-details.html">@Html.Raw(item.Description)</a></li>
                                <li><a href="services-details.html">@Html.Raw(item.Description)</a></li>
                            </ul>
                        </div>
                    </div>
                    }
                   
                   
                </div>
            </div>

            <div class="features-shape-1" data-speed="0.09" data-revert="true">
                <img src="assets/images/features/shape-1.png" alt="image">
            </div>
        </div>
        <!-- End Features Area -->
        
        <!-- Start About Area -->
        <div class="about-area ptb-100">
            <div class="container">

                @foreach (var item in Model.AboutLanguages)
                {
                    

                <div class="row align-items-center justify-content-center">

                    <div class="col-lg-6 col-md-12" data-aos="fade-right" data-aos-delay="50" data-aos-duration="500" data-aos-once="true">
                        <div class="about-image">
                            <img src="@item.About.PhotoURL" alt="Oleev">

                            <div class="about-shape-1" data-speed="0.08" data-revert="true">
                                <img src="assets/images/about/shape-1.png" alt="Oleev">
                            </div>
                        </div>
                    </div>




                    <div class="col-lg-6 col-md-12" data-aos="fade-left" data-aos-delay="50" data-aos-duration="500" data-aos-once="true">
                        <div class="about-content">
                            <span>About Our Company</span>
                            <h3>@item.Title</h3>
                            <p>@Html.Raw(item.Description)</p>
                            <div class="about-btn">
                                <a href="about-one.html" class="default-btn">Learn More</a>
                            </div>
                        </div>
                    </div>
                </div>

                }



            </div>

            <div class="about-shape-2" data-speed="0.08" data-revert="true">
                <img src="assets/images/about/shape-2.png" alt="Oleev">
            </div>
        </div>
        <!-- End About Area -->
        
        <!-- Start Services Area -->
        <div class="services-area pb-100">
            <div class="container">
                <div class="section-title">
                    <span>Our Services</span>
                    <h2>Get Benefit And More With Our Excelent Services</h2>
                </div>

                <div class="row justify-content-center">


                    @foreach (var item in Model.ourServiceLanguages)
                    {
                        <div class="col-lg-4 col-md-6">
                        <div class="single-services-card">
                            <div class="icon">
                                <i class="ri-cast-line"></i>
                            </div>
                            <h3>
                                <a href="services-details.html">@item.Title</a>
                            </h3>
                            <p>@Html.Raw(item.Description) </p>
                            <a href="services-details.html" class="services-btn">Learn More</a>
                        </div>
                    </div>
                    }
                    

                  
                </div>

                <div class="view-more-btn">
                    <a href="services.html" class="default-btn">View More</a>
                </div>
            </div>
        </div>
        <!-- End Services Area -->

        <!-- Start Funfact Area -->
        <div class="fun-fact-area pt-100 pb-75">
            <div class="container">
                <div class="row justify-content-center">

                    @foreach (var item in Model.CountDownLanguages)
                    {
                         <div class="col-lg-3 col-sm-6 col-6">
                        <div class="single-funfact-card">
                            <h3>
                                <span class="odometer" data-count="@item.CountDown.Count">0</span>
                                <span class="small-text">+</span>
                            </h3>
                            <p>@item.Title</p>
                        </div>
                    </div>
                    }
                   


                </div>
            </div>

            <div class="fun-fact-shape-1" data-speed="0.09" data-revert="true">
                <img src="assets/images/features/shape-1.png" alt="image">
            </div>
        </div>
        <!-- End Funfact Area -->

        <!-- Start Case Study Area -->
        <div class="case-study-area pt-100 pb-75">
            <div class="container">
                <div class="section-title-wrap">
                    <div class="row align-items-center">
                        <div class="col-lg-7 col-md-12">
                            <span>Case Study</span>
                            <h2>Grow And Experience Endless Possibilites To Your Business</h2>
                        </div>
    
                        <div class="col-lg-5 col-md-12 text-end">
                            <a href="case-study.html" class="default-btn">View More</a>
                        </div>
                    </div>
                </div>

                <div class="row justify-content-center">

                    @foreach (var item in Model.CaseLanguages)
                    {
                         <div class="col-lg-6 col-md-6">
                        <div class="single-case-study-card">
                            <a href="case-study-details.html"><img src="@item.Case.PhotoURL" alt="Oleev"></a>

                            <div class="case-study-content">
                                <h3>
                                    <a href="case-study-details.html">@item.Title</a>
                                </h3>
                                <a href="case-study-details.html" class="case-btn"><i class="ri-arrow-right-line"></i></a>
                            </div>
                        </div>
                    </div>
                    }
                   

                  
                </div>
            </div>
        </div>
        <!-- End Case Study Area -->
        
        <!-- Start Why Choose Us Area -->
        <div class="why-choose-us-area pb-100">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-lg-6 col-md-12">
                        <div class="why-choose-us-content" data-aos="fade-right" data-aos-delay="50" data-aos-duration="500" data-aos-once="true">
                            <span>Why Choose Us</span>
                            <h3>Our Working Process To Help Your Boost Your Business</h3>
                            <p>Lorem ipsum dolor sit amet consectetur adipiscing elit et fames maecenas amet est scelerisque lectus tortor sit lorem ipsum dolor sit amet consectetur adipiscing elit et fames maecenas amet.</p>


                            @foreach (var item in Model.chooseLanguages)
                            {
                                <div class="choose-us-inner-box">
                                <div class="icon">
                                    <i class="flaticon-ad-campaign"></i>
                                </div>
                                <h4>@item.SubTitle</h4>
                                <p>@item.Info</p>
                            </div>
                            }
                            

                           
                        </div>
                    </div>

                    <div class="col-lg-6 col-md-12">
                        <div class="why-choose-us-image" data-aos="fade-left" data-aos-delay="50" data-aos-duration="500" data-aos-once="true">
                            <img src="assets/images/why-choose-us/choose-1.jpg" alt="Oleev">

                            <div class="why-choose-us-shape-1" data-speed="0.08" data-revert="true">
                                <img src="assets/images/why-choose-us/shape-1.png" alt="Oleev">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Why Choose Us Area -->

        <!-- Start Testimonials Area -->
        <div class="testimonials-area ptb-100">
            <div class="container">
                <div class="section-title">
                    <span>Our Testimonials</span>
                    <h2>What Our Clients Are Saying?</h2>
                </div>
                <div class="testimonials-slides owl-carousel owl-theme">


                    @foreach (var item in Model.studyLanguages)
                    {
                         <div class="single-testimonials-box">
                        <div class="icon">
                            <i class="flaticon-straight-quotes"></i>
                        </div>
                        <p>@Html.Raw(item.Description)</p>

                        <div class="info">
                            <div class="d-flex align-items-center justify-content-center">
                                <img src="@item.Study.PhotoURL" class="rounded-circle" alt="image">
                                <div class="title">
                                    <h3>@item.Name</h3>
                                    <span>@item.Job</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                   
                   
                </div>
            </div>
        </div>
        <!-- End Testimonials Area -->

        <!-- Start Expertise Area -->
        <div class="expertise-area">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-lg-6 col-md-12">
                        <div class="expertise-image" data-aos="fade-right" data-aos-delay="50" data-aos-duration="500" data-aos-once="true">
                            <img src="assets/images/expertise/expertise-1.png" alt="image">

                            <div class="expertise-shape-1" data-speed="0.08" data-revert="true">
                                <img src="assets/images/expertise/shape-1.png" alt="image" data-aos="fade-right" data-aos-delay="50" data-aos-duration="500" data-aos-once="true">
                            </div>
                            <div class="expertise-shape-2" data-speed="0.08" data-revert="true">
                                <img src="assets/images/expertise/shape-2.png" alt="image" data-aos="fade-left" data-aos-delay="50" data-aos-duration="500" data-aos-once="true">
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6 col-md-12">
                        <div class="expertise-content" data-aos="fade-left" data-aos-delay="50" data-aos-duration="500" data-aos-once="true">
                            <span>Our Expertise</span>
                            <h3>Boost Business With Creative Idea & Brand Solutions With Us</h3>
                            <p>Lorem ipsum dolor sit amet consectetur adipiscing elit et fames maecenas amet est scelerisque lectus tortor sit lorem ipsum dolor sit amet consectetur adipiscing elit et fames maecenas amet est scelerisque lectus tortor sit.</p>

                            <div class="row justify-content-center">

                                @foreach (var item in Model.expertiseLanguages)
                                {
                                     <div class="col-lg-6 col-sm-6">
                                    <div class="expertise-inner-box">
                                        <div class="icon">
                                            <i class="ri-stack-line"></i>
                                        </div>
                                        <h4>@item.SubTitle</h4>
                                        <p>@Html.Raw(item.Info)</p>
                                    </div>
                                </div>
                                }
                               

                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Expertise Area -->

        <!-- Start Blog Area -->
        <div class="blog-area pt-100 pb-100">
            <div class="container">
                <div class="section-title">
                    <span>Read Our Latest Articles</span>
                    <h2>Latest From Our Blog Post For Business Technology </h2>
                </div>

                <div class="row justify-content-center">

                    @foreach (var item in Model.articleLanguages)
                    {
                         <div class="col-lg-4 col-md-6">
                        <div class="single-blog-card">
                            <div class="blog-image">
                                <a href="blog-details.html"><img src="@item.Article.PhotoURL" alt="image"></a>
                            </div>
                            <div class="blog-content">
                                <span>By <a href="author.html">Admin</a></span>
                                <h3>
                                    <a href="blog-details.html">@item.Title</a>
                                </h3>
                                <ul class="entry-meta">
                                    <li><i class="ri-calendar-line"></i> @item.Article.Date</li>
                                    <li><i class="ri-price-tag-3-line"></i> <a href="tags.html">@Html.Raw(item.Description) </a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    }
                   

                   
                </div>

                <div class="view-more-btn">
                    <a href="blog.html" class="default-btn">View More</a>
                </div>
            </div>
        </div>
        <!-- End Blog Area -->

        <!-- Start Team Area -->
        <div class="team-area-with-color ptb-100">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-lg-3 col-md-12">
                        <div class="team-box-content">
                            <span>Our Expert Team</span>
                            <h3>Alone We Can Do So Little Together We Can Do So Much</h3>
                            <p>Lorem ipsum dolor sit amet consectetur adipiscing elit fames maecenas amet est scelerisque lectus tortor sit.</p>
                            <div class="team-btn">
                                <a href="team.html" class="default-btn">View More</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-9 col-md-12">
                        <div class="team-slides owl-carousel owl-theme">

                            @foreach (var item in Model.teamLanguages)
                            {
                                 <div class="single-team-card">
                                <div class="team-image">
                                    <img src="@item.Team.PhotoURL" alt="Oleev">
                                    
                                    <ul class="social">
                                        <li>
                                            <a href="https://www.facebook.com/EnvyTheme" target="_blank">
                                                <i class="ri-facebook-fill"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="https://twitter.com/?lang=en" target="_blank">
                                                <i class="ri-twitter-fill"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="https://www.instagram.com/" target="_blank">
                                                <i class="ri-instagram-line"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="https://www.linkedin.com/signup" target="_blank">
                                                <i class="ri-linkedin-line"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="team-content">
                                    <h3>@item.SubTitle</h3>
                                    <span>@item.Info</span>
                                </div>
                            </div>
                            }
                           

                        </div>
                    </div>
                </div>
            </div>

            <div class="team-shape-1" data-speed="0.08" data-revert="true">
                <img src="assets/images/team/shape-1.png" alt="Oleev">
            </div>
        </div>
        <!-- End Team Area -->